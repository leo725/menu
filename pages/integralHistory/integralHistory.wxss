/* pages/integralHistory/integralHistory.wxss */
.container1{
  width: 100%;
  padding: 24rpx;
}
.main{
  background-color: #fff;
  border-radius: 8rpx;
  width: 100%;
  padding: 24rpx;
  height: 168rpx;
  margin-bottom: 24rpx;
}
.box{
  display: inline-block;
  width: 530rpx;
  box-sizing: border-box;
  vertical-align: middle;
  padding-left: 24rpx;
}
.main image{
  width: 120rpx;
  height: 120rpx;
  vertical-align: middle;
}
.box>view:first-child{
  margin-bottom: 4rpx;
}
.box>view:nth-child(2){
  margin-bottom: 14rpx;
}
.main .title{
  font-size: 32rpx;
  color: #333333;
}
.main .right{
  float: right;
  font-size: 24rpx;
  color: #666;
}
.orderno{
  font-size: 22rpx;
  color: #999;
}
.others text{
  font-size: 24rpx;
  color: #666;
}
.type{
  float: right;
  width: 112rpx;
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  border: 2rpx solid #999;
  border-radius: 8rpx;
  line-height: 50rpx;
  margin-top: -24rpx;
}
.type-wdh{
  color: #ff2856 !important;
  border: 2rpx solid #ff2856;
}
.nomore{
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #999;
}
.nodata{
  text-align: center;
  font-size: 32rpx;
  color: #999;
  padding-top: 200rpx;
}
.nodata .iconfont{
  display: block;
}
