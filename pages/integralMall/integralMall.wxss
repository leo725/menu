/* pages/integralMall/integralMall.wxss */
.title{
  line-height: 120rpx;
  font-size: 28rpx;
  color: #999;
  text-align: left;
  padding: 0 24rpx;
}
.title navigator{
  display: inline-block;
}
.title .right{
  float: right;
}
.balck{
  color: #333;
}
.main {
  padding-left: 16rpx;
  overflow: hidden;
}

.item {
  float: left;
  width: 33.3%;
  padding-right: 16rpx;
  padding-bottom: 40rpx;
}

.box {
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
  width: 100%;
  padding-bottom: 16rpx;
  box-shadow: 0px 4px 3px 0px rgba(100, 100, 100, 0.1);
}

.product-img {
  width: 100%;
  height: 200rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  display: block;
  overflow: hidden;
  text-align: center;
  font-size: 156rpx;
  color: #ccc;
}

.text-box {
  padding-left: 6rpx;
}

.product-title {
  font-size: 32rpx;
  color: #333;
  padding-bottom: 16rpx;
  display: block;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.jia {
  float: right;
  font-size: 22rpx;
  color: #fff;
  background-color: #ff2856;
  height: 40rpx;
  width: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  margin-right: 16rpx;
}
.nodata{
  text-align: center;
  font-size: 32rpx;
  color: #999;
  padding-top: 200rpx;
}
.nodata .iconfont{
  display: block;
}
