/* pages/shopCar/shopCar.wxss */
.shopcar{
  padding:40rpx 20rpx 0;
  padding-bottom:112rpx;
  width: 100%;
  position: relative;
}
.info{
  font-size: 28rpx;
  /* border-top: 5rpx solid #ff2856; */
  padding:10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0px 2px 16px 0px rgba(234, 234, 234, 0.75);
}
.title{
  text-align: center;
  font-size: 32rpx;
  padding-bottom: 20rpx;
  color: #333;
  margin-top: 20rpx;
}
.info-list{
  overflow: hidden;
  padding: 20rpx;
}
.info-list .iconfont{
  display: block;
}
.base-info{
  width: 80%;
  float: left;
  line-height: 80rpx;
}
.base-info-first{
  line-height: 50rpx;
}
.base-info text{
  margin-right: 60rpx;
}
.base-info .no-margin{
  margin:0;
}
.base-info .right{
  float: right;
}
.red{
  color: #ff2856;
}
.right-btn{
  float: right;
  height: 80rpx;
  text-align: center;
  color: #999;
  font-size: 22rpx;
  vertical-align: middle;
}

.list-container{
  width: 100%;
}
.list-box{
  width: 100%;
  overflow: hidden;
}
.list-title{
  font-size: 32rpx;
  color:#666;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ff2856;
}
.list-main{
  padding:24rpx;
  overflow: hidden;
  width: 100%;
  height: 154rpx;
  margin-top: 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0px 2px 16px 0px rgba(234, 234, 234, 0.75);
}
.list-main:last-child{
  border:0;
}
.list-main>view{
  float: left;
  height: 154rpx;
}
.user-info{
  font-size:22rpx;
  color: #999;
  text-align: center;
  margin-right: 20rpx;
}
.user-info image{
  width: 106rpx;
  height: 106rpx;
  border-radius: 8rpx;
  display: block;
  margin-bottom: 6rpx;
}
.product{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  width: 390rpx;
}
.price{
  color:#ff2856;
  font-weight: normal;
  display: block;
  margin-top: 15rpx;
}
.add-or-minus{
  float: right;
  font-size: 28rpx;
  line-height: 140rpx;
}
.add-or-minus .iconfont{
  border:2rpx solid #ff2856;
  border-radius: 50%;
  vertical-align: middle;
  display: inline-block;
  height: 36rpx;
  width: 36rpx;
  text-align: center;
  line-height: 36rpx;
}
.add-or-minus .icon-jia{
  color: #fff;
   background-color: #ff2856;
}
.num{
  display: inline-block;
  width: 60rpx;
  text-align: center
}
.empty{
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 40rpx;
}
.empty .iconfont{
  display: block;
}
.nopic{
  font-size: 100rpx;
  color: #ccc;
}
.submit-btn{
  width:120rpx;
  height: 120rpx;
  line-height: 120rpx;
  background-color:#ff2856;
  color:#fff;
  font-size:34rpx;
  display:block;
  text-align:center;
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  border-radius: 50%;
  background:linear-gradient(to right, #FF2856 , #FF76A7);
  box-shadow: 0px 10px 16px 0px rgba(255, 56, 103, 0.3);
}