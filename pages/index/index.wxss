/**index.wxss**/

/* 菜品列表 */
.my-container{
  width: 100%;
  height: 100%;
}
.scroll-box{
  height: 100%;
  width: 100%;
}
.list-box,.list-item {
  width: 100%;
}
.list-box{
  height: 100%;
}

.list-title {
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0;
  width: 100%;
}

.line {
  border-top: 1rpx solid #aaa;
  display: inline-block;
  width: 150rpx;
  margin: 0 30rpx;
  position: relative;
  top: -10rpx;
}

.product-box {
  padding-left: 16rpx;
  width: 100%;
}

.product {
  float: left;
  width: 33.3%;
  padding-right: 16rpx;
  padding-bottom: 40rpx;
  position: relative;
}

.product-item {
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
  width: 100%;
  padding-bottom: 16rpx;
  box-shadow: 0px 4px 3px 0px rgba(100, 100, 100, 0.1);
}

.product-img {
  width: 100%;
  height: 200rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  display: block;
  overflow: hidden;
  text-align: center;
  font-size: 156rpx;
  color: #ccc;
}

.product:nth-child(3n+1) {
  padding-left: 0;
}

.product-title {
  font-size: 32rpx;
  color: #333;
  padding-bottom: 16rpx;
  display: block;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.text-box {
  padding-left: 6rpx;
}

.select-num {
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  border-radius: 50%;
  right: 10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: #ff2856;
}

/* 菜单导航 */

.layout {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 2;
  transition: all linear 0.25s;
}

.navs-box {
  position: fixed;
  right: -280rpx;
  top: 0;
  bottom: 0;
  z-index: 999;
  transition: all linear 0.25s;
}

.nav-list {
  background: #fff;
  padding-left: 40rpx;
  overflow-y: auto;
  height: 100%;
  box-sizing: border-box;
}

.nav-list-title{
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0 20rpx 10rpx;
  border-bottom: 1rpx solid #eee;
}

.navs-box.show {
   right: 0; 
  top: 0;
  bottom: 0;
}

.nav-btn {
  position: absolute;
  left: -68rpx;
  top: 50%;
  height: 106rpx;
  margin-top: -53rpx;
  font-size: 20rpx;
  background-color: #fff;
  padding: 10rpx 0 10rpx 20rpx;
  text-align: center;
  border-top-left-radius: 53rpx;
  border-bottom-left-radius: 53rpx;
  color: #666;
  border:1px solid #eee;
  border-right: 0;
}

.icon-liebiao {
  display: block;
}

.nav-item {
  font-size: 28rpx;
  padding: 40rpx 0 40rpx 10rpx;
  width: 240rpx;
  border-bottom: 1rpx solid #eee;
}
.nav-item.active{
  color: #ff2856;
}

.search{
  position: absolute;
  left: 24rpx;
  top: 40rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  box-sizing: border-box;
  color: #999;
  z-index: 2
}
.icon-jia{
  float: right;
  font-size: 24rpx;
  color: #fff;
  background-color: #ff2856;
  height: 36rpx;
  width: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 50%;
  margin-right: 10rpx;
  /* border: 2rpx solid #ff2856; */
}
.search-box{
  width: 100%;
  padding: 40rpx 24rpx;
  padding-bottom: 0;
  position: relative;
}
.search-box input{
  box-sizing:border-box;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  border:1rpx solid #eee;
  border-radius:40rpx;
  background-color:#fff;
  padding:0 60rpx;
  box-shadow: 0px 2px 16px 0px rgba(234, 234, 234, 0.75);
  color: #999;
  font-size: 28rpx;
}