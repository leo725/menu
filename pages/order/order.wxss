/* pages/order/order.wxss */
@import '../shopCar/shopCar';

.base-info-33,.base-info-50 {
  overflow: hidden;
  width: 100%;
}

.base-info-50 text {
  margin: 0;
  width: 50%;
  float: left;
}

.base-info-33 text {
  margin: 0;
  width: 33.33%;
  float: left;
}

.base-info text:last-child {
  text-align: right;
}

.pay-box {
  line-height: 60rpx;
}

.pay-btn {
  color: #fff;
  background-color: #ff2856;
  text-align: center;
  width: 180rpx;
  line-height: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  float: right;
  font-size: 26rpx;
}

.list-title {
  text-align: center;
  line-height: 60rpx;
  position: relative;
}
.user-logo{
  position: absolute;
  left: 0;
  top: 15rpx;
}
.list-title image{
  width:60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.right{
  float: right;
  position: absolute;
  right: 0;
}
.list-main{
  font-size: 28rpx;
  color: #333;
  position: relative;
}
.product-name{
  font-size:32rpx;
  height: 60rpx !important;
}
.product-info{
  text-align: center;
  width: 100%;
  height: 48rpx !important;
}
.pirce{
  position: absolute;
  left: 20rpx;
}
.product-info image{
  position: absolute;
  right: 40rpx;
  top: 34rpx;
  width: 120rpx;
  height: 90rpx;
}
.order-no{
  width: 100%;
}